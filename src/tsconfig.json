{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "../lib",
    "stripInternal": true
  },
  "include": [
    "../src/**/*.ts",
    "../typings/index.d.ts"
  ],
  "exclude": [
    "../lib",
    "../node_modules",
    "../src/node_modules"
  ]
}